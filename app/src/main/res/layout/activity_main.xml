<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.juan.calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/eResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textSize="30dp"
            android:layout_weight="0.35" />
        <Button
            android:id="@+id/bBorrar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="->"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textSize="30sp"
            android:layout_marginLeft="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/bSiete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="7"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/bOcho"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="8"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/bNueve"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="9"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/bSuma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="@color/black"
            android:text="+"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/bCuatro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="4"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/bCinco"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="5"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/bSeis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="6"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/bResta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="-"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:textSize="30sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/bUno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="1"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/bDos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="2"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/bTres"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="3"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/bMultiplicacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="*"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/bPunto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="."
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/bCero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="0"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/bIgual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="="
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/bDivision"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="/"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:textSize="30sp"/>
    </LinearLayout>

</LinearLayout>
